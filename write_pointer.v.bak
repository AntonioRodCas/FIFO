module write_pointer
#
(parameter DATA_WIDTH=8, parameter MEM_DEPTH=4)
(
	input [(DATA_WIDTH-1):0] data,
	input [(ADDR_WIDTH-1):0] read_addr, 
	input [(ADDR_WIDTH-1):0]	write_addr,
	input we, 
	input clk,
	
	output reg [(DATA_WIDTH-1):0] q
);

endmodule